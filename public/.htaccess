# Activation du moteur de réécriture
RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirection www vers non-www
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [R=301,L]

# Protection du fichier .htaccess
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# Protection des fichiers sensibles
<FilesMatch "^.*\.(log|json|yml|yaml|md|sql|config.php|env)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Autoriser l'accès au fichier my-projects.json
<Files "my-projects.json">
    Order allow,deny
    Allow from all
</Files>

# Compression Gzip
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript application/xml application/json
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
</IfModule>

# Optimisation du cache navigateur
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    
    # Favicon et icônes
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType image/vnd.microsoft.icon "access plus 1 year"
    
    # Assets statiques
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType text/javascript "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    
    # Fonts
    ExpiresByType application/x-font-ttf "access plus 1 month"
    ExpiresByType font/ttf "access plus 1 month"
    ExpiresByType application/x-font-woff "access plus 1 month"
    ExpiresByType font/woff "access plus 1 month"
    ExpiresByType application/font-woff2 "access plus 1 month"
    
    # JSON (pour my-projects.json)
    ExpiresByType application/json "access plus 1 day"
    
    # HTML - temps court pour les mises à jour rapides
    ExpiresByType text/html "access plus 1 hour"
    
    # Valeur par défaut
    ExpiresDefault "access plus 1 week"
</IfModule>

# Cache-Control Headers
<IfModule mod_headers.c>
    # Cache pour les assets statiques
    <FilesMatch "\.(ico|pdf|jpg|jpeg|png|webp|gif|svg|js|css|swf|ttf|woff|woff2)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    # Cache plus court pour my-projects.json
    <Files "my-projects.json">
        Header set Cache-Control "max-age=86400, must-revalidate"
    </Files>
    
    # Cache court pour HTML
    <FilesMatch "\.(html|php)$">
        Header set Cache-Control "max-age=3600, must-revalidate"
    </FilesMatch>
</IfModule>

# En-têtes de sécurité
<IfModule mod_headers.c>
    # Protection XSS
    Header set X-XSS-Protection "1; mode=block"
    
    # Protection contre le clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Protection contre le reniflage de type MIME
    Header set X-Content-Type-Options "nosniff"
    
    # Référer-Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy
    Header set Content-Security-Policy "default-src 'self' https: data: 'unsafe-inline' 'unsafe-eval'; img-src 'self' data: https:; font-src 'self' data: https:;"
</IfModule>

# Désactiver l'affichage du contenu des répertoires
Options -Indexes

# Gestion des erreurs
ErrorDocument 404 /404.html
ErrorDocument 403 /403.html
ErrorDocument 500 /500.html

# Performance - Keep Alive
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# Redirection des erreurs vers la page d'accueil
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /index.php [L]